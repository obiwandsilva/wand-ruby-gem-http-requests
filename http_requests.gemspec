Gem::Specification.new do |s|
  s.name        = 'http_requests'
  s.version     = '1.0.0'
  s.date        = '2018-02-06'
  s.summary     = 'A simple lib that provides easy methods to make HTTP and HTTP requests.'
  s.description = %q{http_requests is a lib that provides an easy way to create an HTTP or HTTPS
                     connection and issue requests to it.}
  s.authors     = ["Wanderson Silva"]
  s.email       = 'wanderson.olivs@gmail.com'
  s.files       = Dir["lib/*.rb"]
  s.homepage    = 'https://github.com/silvawand/wand-ruby-gem-http-requests'
  s.license     = 'MIT'
end